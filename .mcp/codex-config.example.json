{
  "name": "codex-mcp-tool",
  "version": "1.0.0",
  "description": "OpenAI Codex configuration for code generation and troubleshooting",
  "model": "gpt-5-codex",
  "api": {
    "endpoint": "https://api.openai.com/v1",
    "key_env": "OPENAI_API_KEY",
    "timeout": 60000,
    "retry": {
      "max_attempts": 2,
      "backoff": "linear"
    }
  },
  "parameters": {
    "temperature": 0.2,
    "max_tokens": 4000,
    "top_p": 0.95,
    "frequency_penalty": 0.0,
    "presence_penalty": 0.0,
    "reasoning_effort": "low"
  },
  "modes": {
    "read-only": true,
    "execute": false,
    "interactive": false
  },
  "specialties": {
    "syntax_fixes": {
      "enabled": true,
      "languages": ["javascript", "typescript", "python", "go", "rust"]
    },
    "boilerplate": {
      "enabled": true,
      "templates": ["api-endpoint", "react-component", "service-class", "test-suite"]
    },
    "ui_ux": {
      "enabled": true,
      "frameworks": ["react", "vue", "tailwind", "shadcn"]
    },
    "troubleshooting": {
      "enabled": true,
      "focus": ["error-messages", "type-errors", "configuration-issues"]
    }
  },
  "usage_tracking": {
    "enabled": true,
    "log_file": "ai-docs/logs/codex-usage.jsonl"
  },
  "workflow_integration": {
    "scout": {
      "use_case": "Alternative search method",
      "reasoning_effort": "low",
      "max_tokens": 2000
    },
    "build": {
      "use_case": "Primary code generation",
      "reasoning_effort": "medium",
      "max_tokens": 4000,
      "task_types": [
        "boilerplate",
        "syntax-fixes",
        "ui-components",
        "function-implementation",
        "config-files"
      ]
    }
  },
  "safety": {
    "sandbox": true,
    "file_access": "restricted",
    "network_access": false
  }
}
